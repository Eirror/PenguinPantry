<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenguinPantry.Views.IngredientsPage"
             xmlns:viewmodel="clr-namespace:PenguinPantry.ViewModels"
             xmlns:models="clr-namespace:PenguinPantry.Models"
             x:DataType="viewmodel:IngredientViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="0,0"
            VerticalOptions="Fill">

            <Button Text="+" 
                    WidthRequest="100" 
                    HeightRequest="100" 
                    FontSize="40" 
                    VerticalOptions="Start" 
                    HorizontalOptions="End"
                    Margin="15">
                
            </Button>


            <Border Margin="15" VerticalOptions="StartAndExpand">
                <CollectionView x:Name="foo" Margin="15">
                </CollectionView>
            </Border>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
